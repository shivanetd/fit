# Environment variables for FitTracker Docker deployment
# Copy this file to .env and set your own values

# SESSION SECRET - CHANGE THIS TO A RANDOM STRING IN PRODUCTION
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# MongoDB Passwords - CHANGE THESE IN PRODUCTION
MONGO_ROOT_PASSWORD=admin-password-change-in-production
MONGO_PASSWORD=app-password-change-in-production

# Google OAuth Credentials (get from Google Cloud Console)
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Flask Environment
FLASK_ENV=production